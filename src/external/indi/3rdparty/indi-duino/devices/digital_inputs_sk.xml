<INDIDriver>

<defSwitchVector device="Arduino INPUTS" name="CONNECTION" label="Connection" group="Main Control" state="Idle" perm="rw" rule="OneOfMany" timeout="60">
    <defSwitch name="CONNECT" label="Connect">
Off
    </defSwitch>
    <defSwitch name="DISCONNECT" label="Disconnect">
On
    </defSwitch>
</defSwitchVector>

<defTextVector device="Arduino INPUTS" name="DEVICE_PORT" label="SERIAL PORT" group="Main Control" state="Idle" perm="rw" timeout="0">
    <defText name="PORT" label="Port">
/dev/ttyACM0
    </defText>
</defTextVector>

