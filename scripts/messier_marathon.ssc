	core.setDate(NowTime[i], "local");
	objName = objNameSum[i];

	if(Mylatitude < 30) 
	{
		if(objName == "M74") {
			core.setDate("-30 minutes", "local");
		}
	
		if(objName == "M31" || objName == "M32" || objName == "M110") {
